{
  "name": "westfall-electron",
  "version": "0.1.0-beta.1",
  "description": "Westfall Personal Assistant - Desktop Application",
  "author": "Westfall Softwares <westfallt13@gmail.com>",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "echo \"Dev: run backend via uvicorn then launch Electron manually\"",
    "dist:win": "electron-builder --win nsis",
    "dist:mac": "electron-builder --mac dmg",
    "dist:linux": "electron-builder --linux AppImage deb",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "32.2.7",
    "electron-builder": "25.1.8"
  },
  "build": {
    "appId": "com.westfall.assistant",
    "productName": "Westfall Assistant",
    "copyright": "Â© Westfall",
    "files": [
      "**/*",
      "!backend/**"
    ],
    "extraResources": [
      {
        "from": "../dist-backend/",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Westfall-Assistant-${version}-win.${ext}",
      "sign": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "artifactName": "Westfall-Assistant-${version}-mac.${ext}",
      "hardenedRuntime": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "Westfall-Assistant-${version}-linux.${ext}",
      "category": "Utility"
    }
  }
}
