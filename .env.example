# Westfall Personal Assistant - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real values to version control

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Ollama Configuration (for local AI models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2

# =============================================================================
# EXTERNAL SERVICE API KEYS
# =============================================================================

# Weather Service (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# News Service (NewsAPI)
NEWSAPI_KEY=your_newsapi_key_here

# Email Service Configuration
EMAIL_SMTP_HOST=your_smtp_host_here
EMAIL_SMTP_PORT=587
EMAIL_IMAP_HOST=your_imap_host_here
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=your_email_username_here
EMAIL_PASSWORD=your_email_password_here
EMAIL_USE_TLS=true
EMAIL_USE_SSL=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_URL=sqlite:///data/assistant.db
DATABASE_ENCRYPTION_KEY=your_database_encryption_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Master password for secure credential storage
MASTER_PASSWORD_HASH=your_master_password_hash_here

# API Key Vault Encryption
API_KEY_VAULT_ENCRYPTION_KEY=your_vault_encryption_key_here

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_HOUR=100000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/assistant.log
LOG_TO_FILE=true

# Feature Flags
BUSINESS_FEATURES_ENABLED=false
CRM_ENABLED=false
FINANCE_TRACKING_ENABLED=false
TIME_TRACKING_ENABLED=false
SCREEN_CAPTURE_ENABLED=false
AUTOMATION_ENABLED=false
WEB_SEARCH_ENABLED=true

# UI Configuration
THEME_MODE=auto
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
ENABLE_ANIMATIONS=true

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Set to true for development mode
DEBUG_MODE=false
TESTING_MODE=false

# Mock service responses (for testing without real API keys)
USE_MOCK_SERVICES=false

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_DIRECTORY=backups
BACKUP_RETENTION_DAYS=30

# File storage
DATA_DIRECTORY=data
MODELS_DIRECTORY=models
EXTENSIONS_DIRECTORY=extensions

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. Keep this file secure and never commit it to version control
# 2. Use strong, unique passwords and API keys
# 3. Regularly rotate your API keys and passwords
# 4. Consider using a password manager for generating secure values
# 5. For production deployments, consider using dedicated secret management services
# 
# API Key Sources:
# - OpenAI: https://platform.openai.com/api-keys
# - OpenWeatherMap: https://openweathermap.org/api
# - NewsAPI: https://newsapi.org/register
# 
# =============================================================================