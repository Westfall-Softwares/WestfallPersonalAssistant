<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WestfallPersonalAssistant.Views.PackManagementView">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <!-- Header -->
            <TextBlock Text="📦 Tailor Pack Management" 
                     FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Info Banner -->
            <Border Background="#E3F2FD" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="🎯 Business Tailor Packs" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Specialized functionality modules designed for entrepreneurs and small businesses. Each pack adds industry-specific tools, automations, and workflows to supercharge your business operations." 
                             TextWrapping="Wrap" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Installed Packs Section -->
            <Border Background="#FAFAFA" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="✅ Installed Packs" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <!-- Sample Installed Pack -->
                    <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                            <Border Grid.Column="0" Background="#4CAF50" CornerRadius="20" Width="40" Height="40" Margin="0,0,15,0">
                                <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Marketing Essentials Pack" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Campaign tracking, social media management, lead generation tools" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="Version 1.0.0 • Author: Westfall Business Tools" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                            </StackPanel>
                            <Border Grid.Column="2" Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="10,0">
                                <TextBlock Text="ACTIVE" Foreground="White" FontSize="11" FontWeight="Bold"/>
                            </Border>
                            <Button Grid.Column="3" Content="⚙️ Settings" Padding="8" Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- No Packs Message -->
                    <Border Background="White" CornerRadius="5" Padding="30" IsVisible="False">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Text="No Tailor Packs installed yet" FontSize="16" HorizontalAlignment="Center" Foreground="Gray"/>
                            <TextBlock Text="Import your first pack to get started!" FontSize="12" HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Available Pack Categories -->
            <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="🛒 Pack Categories" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        
                        <!-- Marketing -->
                        <Border Grid.Column="0" Grid.Row="0" Background="#E8F5E8" CornerRadius="5" Padding="15" Margin="0,0,8,5">
                            <StackPanel>
                                <TextBlock Text="📈 Marketing" FontWeight="Bold"/>
                                <TextBlock Text="Campaign management, social media, analytics" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sales -->
                        <Border Grid.Column="1" Grid.Row="0" Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="7,0,8,5">
                            <StackPanel>
                                <TextBlock Text="💼 Sales" FontWeight="Bold"/>
                                <TextBlock Text="CRM, pipeline management, deal tracking" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Finance -->
                        <Border Grid.Column="2" Grid.Row="0" Background="#FFF3E0" CornerRadius="5" Padding="15" Margin="7,0,0,5">
                            <StackPanel>
                                <TextBlock Text="💰 Finance" FontWeight="Bold"/>
                                <TextBlock Text="Accounting, invoicing, expense tracking" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Operations -->
                        <Border Grid.Column="0" Grid.Row="1" Background="#F3E5F5" CornerRadius="5" Padding="15" Margin="0,5,8,0">
                            <StackPanel>
                                <TextBlock Text="⚙️ Operations" FontWeight="Bold"/>
                                <TextBlock Text="Project management, workflow automation" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Analytics -->
                        <Border Grid.Column="1" Grid.Row="1" Background="#FFEBEE" CornerRadius="5" Padding="15" Margin="7,5,8,0">
                            <StackPanel>
                                <TextBlock Text="📊 Analytics" FontWeight="Bold"/>
                                <TextBlock Text="Business intelligence, reporting, insights" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Growth -->
                        <Border Grid.Column="2" Grid.Row="1" Background="#E0F2F1" CornerRadius="5" Padding="15" Margin="7,5,0,0">
                            <StackPanel>
                                <TextBlock Text="🚀 Growth" FontWeight="Bold"/>
                                <TextBlock Text="Scaling tools, automation, optimization" FontSize="11" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Import Actions -->
            <Border Background="#E8F5E8" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="📥 Import Tailor Pack" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Grid ColumnDefinitions="*,*">
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="🔑 License/Order Number" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Enter your order number to download and install your purchased pack" 
                                     FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <TextBox Watermark="Enter order number..." Margin="0,0,0,10"/>
                            <Button Content="🔗 Verify &amp; Install" Background="#4CAF50" Foreground="White" Padding="10"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="7,0,0,0">
                            <TextBlock Text="📂 ZIP File Upload" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Drag and drop a Tailor Pack ZIP file to install it locally" 
                                     FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <Border Background="#F0F0F0" CornerRadius="5" Padding="30" BorderBrush="#DDD" BorderThickness="2">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Drop ZIP file here" FontSize="12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>