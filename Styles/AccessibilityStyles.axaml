<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Accessibility Styles -->
    
    <!-- High Contrast Mode Styles -->
    <Style Selector=":is(Control)[IsEnabled=False]">
        <Setter Property="Opacity" Value="0.6"/>
    </Style>
    
    <!-- Focus Indicators -->
    <Style Selector="Button:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="TextBox:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#FFF8F8FF"/>
    </Style>
    
    <Style Selector="CheckBox:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="ComboBox:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="Slider:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="TabItem:focus-visible">
        <Setter Property="BorderBrush" Value="#FF0078D4"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#FFF0F8FF"/>
    </Style>
    
    <!-- High Contrast Theme -->
    <Style Selector="Window.HighContrast">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Window.HighContrast Button">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="Window.HighContrast Button:pointerover">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Yellow"/>
    </Style>
    
    <Style Selector="Window.HighContrast TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Window.HighContrast Border">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style Selector="Window.HighContrast TextBox">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <Style Selector="Window.HighContrast CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
    </Style>
    
    <Style Selector="Window.HighContrast ComboBox">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <!-- Status and Live Region Styles -->
    <Style Selector="Border.LiveRegion">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    
    <Style Selector="TextBlock.StatusMessage">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Foreground" Value="#0078D4"/>
    </Style>
    
    <Style Selector="TextBlock.ErrorMessage">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#DC143C"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    
    <Style Selector="TextBlock.SuccessMessage">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#228B22"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    
</Styles>