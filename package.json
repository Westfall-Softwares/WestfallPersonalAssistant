{
  "name": "westfall-personal-assistant",
  "version": "1.0.0",
  "description": "A personal AI assistant with local model management, screen capture, and three-tier thinking system",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run backend\"",
    "backend": "python backend/server.py",
    "build": "electron-builder",
    "build-react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "install-all": "npm install && npm run install-python",
    "install-python": "pip install -r backend/requirements.txt",
    "update-deps": "npm update && npm run update-python || echo 'Note: Python update may fail due to network issues'",
    "update-python": "pip install --upgrade -r backend/requirements.txt",
    "setup": "npm run install-all && npm run update-deps",
    "audit-fix": "npm audit fix"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "local",
    "llm",
    "screen-capture"
  ],
  "author": "Westfall",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-scripts": "5.0.1",
    "@mui/material": "^5.16.0",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.16.0",
    "axios": "^1.7.0",
    "electron-store": "^10.0.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.westfall.personal-assistant",
    "productName": "Westfall Personal Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}