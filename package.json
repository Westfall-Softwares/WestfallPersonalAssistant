{
  "name": "westfall-personal-assistant",
  "version": "1.0.0",
  "description": "A personal AI assistant with local model management, screen capture, and three-tier thinking system",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run backend\"",
    "backend": "python backend/server.py",
    "build": "npm run build-react && electron-builder",
    "build-react": "react-scripts build",
    "test": "react-scripts test",
    "launch": "node launcher.js",
    "setup-deps": "npm install && pip install -r backend/requirements.txt"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "local",
    "llm",
    "screen-capture"
  ],
  "author": "Westfall",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.0",
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-scripts": "5.0.1",
    "@mui/material": "^5.16.0",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.16.0",
    "axios": "^1.7.0",
    "electron-store": "^10.0.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.westfall.personal-assistant",
    "productName": "Westfall Personal Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "backend/**/*",
      "node_modules/**/*",
      "westfall.png"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "westfall.png"
    },
    "win": {
      "icon": "westfall.png"
    },
    "linux": {
      "icon": "westfall.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}