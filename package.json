{
  "name": "entrepreneur-assistant",
  "version": "1.0.0",
  "description": "A business-focused AI assistant with Tailor Pack support for entrepreneurs and small businesses",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm:start\" \"npm:backend\"",
    "backend": "python backend/server.py",
    "build": "electron-builder",
    "test": "echo \"No tests defined\"",
    "launch": "node electron/launcher.js",
    "setup-deps": "npm install && pip install -r backend/requirements.txt"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "business",
    "entrepreneur",
    "tailor-packs"
  ],
  "author": "Westfall",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^25.0.0",
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-store": "^10.0.0"
  },
  "build": {
    "appId": "com.westfall.entrepreneur-assistant",
    "productName": "Westfall Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "!backend/tests/**/*",
      "!backend/**/*.pyc",
      "!backend/**/__pycache__/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "assets/westfall.png"
    },
    "win": {
      "icon": "assets/westfall.png"
    },
    "linux": {
      "icon": "assets/westfall.png"
    }
  }
}